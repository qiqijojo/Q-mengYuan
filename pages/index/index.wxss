/**index.wxss**/
.indexImage{
  width: inherit
}
.indexImage image{
  width:inherit;
   height: 200px; 
}
.hotText{
  margin:20px auto;
}
.hotText::before{
  content: '-----------'
}
.hotText::after{
  content: '-----------'
}
.showbox{
  width:inherit;
  text-align: left; 
}
.dataList{
  width: inherit;
  margin-bottom: 10px;
  border-top:1px solid #ccc;
  border-bottom: 1px solid #ccc; 
}
.dataList image{
  width:50px;
  height:50px;
  float: left;
  border-radius: 50%;
} 
.dataList text:nth-of-type(1){
  display: block;
  height: 50px;
  line-height: 50px;
  margin-left: 60px;
}
.dataList .content{
  margin:10px 0;
  padding: 5px 10px;
}
.dataList text:nth-of-type(2){
  font-size: 14px;
}