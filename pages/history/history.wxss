.page_hd {
  position: relative;
}
.page_title {
  text-align: center;
  margin: 20px auto;
}
.page_title__joke {
  background-color:#f9f027;
  padding:10px 30px;
  border-radius:10px;
  border:1px solid #ccc;
  color: white;
}
.page_title__photo {
  background-color: #1296db;
  padding:10px 30px;
  border-radius:10px;
  border:1px solid #ccc;
  color: white;
}
.page_title__movie {
  background-color: #d81e06;
  padding:10px 30px;
  border-radius:10px;
  border:1px solid #ccc;
  color: white;
}
.page_item__header {
	width: 90%;
	margin: 0 auto;
}
.page_item__header text {
	font-size: 12px;
	color: #ccc;
}
.page_item__header .page_item__mid {
  color: red important;
  margin-left: 10px;
}
.page_item__content {
  	width:90%;
	height:80px;
	border:1px solid #ccc;
	border-radius:10px;
	margin:10px auto;
	position: relative;
}
.page_item__delete{
  	width:20px;
	height:20px;
	position:absolute;
	right:5px;
	bottom:5px;
}
.page_item__delete image{
	width: 100%;
	height: 100%;
}