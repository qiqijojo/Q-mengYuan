/* pages/pals/pal.wxss */
.page_fd {
  position: relative;
}
.page_title {
  text-align: center;
  margin: 20px auto;
}
.page_title__joke {
  background-color:#f9f027;
  padding:10px 30px;
  border-radius:10px;
  border:1px solid #ccc;
  color: white;
}
.page_title__photo {
  background-color: #1296db;
  padding:10px 30px;
  border-radius:10px;
  border:1px solid #ccc;
  color: white;
}
.page_title__movie {
  background-color: #d81e06;
  padding:10px 30px;
  border-radius:10px;
  border:1px solid #ccc;
  color: white;
}
.page_item__header {
  width: 90%;
  margin: 0 auto;
}
.page_item__header text {
  font-size: 12px;
  color: #ccc;
}
.page_item__header .page_item__mid {
  color: red important;
  margin-left: 10px;
}
.page_item__content {
  width:90%;
  height:80px;
  border:1px solid #ccc;
  border-radius:10px;
  margin:10px auto;
  position: relative;
}
.page_item__user {
  width: 30%;
  height:100%;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
  display: -webkit-box;
  -webkit-box-pack: center;
  -webkit-box-align: center;
  position: relative;
}
.page_item__user:before {
  display: block;
  content: "";
  width: 1px;
  height: 80%;
  position: absolute;
  top:10%;
  right:0;
  color:#ccc;
  background-color:#ccc;
}
.page_item__article {
  width: 70%;
  height:100%;
  float: left;
  text-align: center;
}
.page_item__article text {
  margin-top:10px;
  display: -webkit-box;
  line-height: 15px;
  color: #333;
  font-size: 12px;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.page_item__user .page_item__userImg {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.page_item__delete{
  width:20px;
  height:20px;
  position:absolute;
  right:5px;
  bottom:5px;
}
.page_item__delete image{
  width: 100%;
  height: 100%;
}