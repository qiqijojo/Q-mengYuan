/* pages/modal/modal.wxss */
.modal{
  width:inherit;
  height:inherit;
  position: fixed;
  top: 0px;
  left: 0px;
  padding-top: 60px;
  z-index:10;
  /* background: rgba(9, 9, 9, 0.3);     */
  background-image: linear-gradient(-180deg,#3c3c3c 12%,rgba(28,28,32,0.5) 100%);         
}
.info{
  margin: 30px 0px;
}
.info image{
  width:100px;
  height:100px;
  border-radius: 50%;
  opacity: 0.5;
} 
.fillCharacter{
  width: inherit;
  margin-top: 30px;
}
.fillCharacter input{
  margin:30px auto;
  text-align: left;
  width:70%;
  border-bottom: 1px solid #333;
}
button{
  margin-top: 10px;
}
